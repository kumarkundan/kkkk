<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="15dp"
    android:descendantFocusability="beforeDescendants"
    android:elevation="2dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_background"
        android:descendantFocusability="afterDescendants"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout3">
                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="105dp"
                    android:src="@mipmap/image"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rl3"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:orientation="vertical"
                android:layout_toEndOf="@+id/linearLayout3">


                <Button
                    android:id="@+id/tabto"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:text="Suman"
                    android:gravity="bottom"
                    android:textColor="#FF1BC6AA"
                    android:focusable="false"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:textSize="18sp"
                    android:id="@+id/textdesig"
                    android:gravity="bottom"
                    android:textColor="#c73b3b3b"
                    android:layout_alignTop="@+id/to"
                    android:layout_toEndOf="@+id/to"

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView1"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:src="@drawable/nimble"
                        android:padding="3dp"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:src="@drawable/techexx"
                        android:padding="3dp"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:src="@drawable/innov"
                        android:padding="3dp"/>
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Kristy is the very defination of an entepreneur "
           android:padding="2dp"
           android:id="@+id/tabdescription"
           android:textSize="15sp"/>
    </LinearLayout>

</FrameLayout>
