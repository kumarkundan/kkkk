<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="3"
    android:background="#FFFFFF"
    android:padding="10dp">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >


        <ImageView
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:id="@+id/imageButton2"
            android:src="@drawable/flipkart2"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/textView5" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:id="@+id/imageButton1"
            android:src="@drawable/flighttickets"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/textView6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#ff000000"
            android:textStyle="italic"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Movie Tickets"
            android:id="@+id/textView6"

            android:layout_below="@+id/imageButton1"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#ff000000"
            android:textStyle="italic"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Macdonalds Cupon"
            android:id="@+id/textView5"

            android:layout_below="@+id/imageButton2"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >


        <ImageView
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:id="@+id/imageButton4"
            android:src="@drawable/images"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/textView3" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:id="@+id/imageButton3"
            android:src="@drawable/ticccc"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/textView2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#ff000000"
            android:textStyle="italic"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Movie Tickets"
            android:id="@+id/textView2"
            android:layout_below="@+id/imageButton3"
            android:layout_alignParentStart="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#ff000000"
            android:textStyle="italic"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Macdonalds Cupon"
            android:id="@+id/textView3"
            android:layout_below="@+id/imageButton4"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:id="@+id/relativeLayout3">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="120dp"
                android:id="@+id/imageButton5"
                android:src="@drawable/az"
                 />

        </RelativeLayout>
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/imageButton6"
            android:src="@drawable/res"
            android:layout_weight="1"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amazon Coupons"
            android:textColor="#ff000000"
            android:textStyle="italic"
            android:layout_below="@+id/relativeLayout3"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/relativeLayout3"
            android:gravity="center"
            android:textSize="20sp"/>


    </RelativeLayout>

</LinearLayout>